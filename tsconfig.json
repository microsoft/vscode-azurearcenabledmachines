{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "out",
    "target": "es6",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test"
  ]
}
